<div id="formInput" ng-controller="modifyController as modifyCtrl">

	<p>
		<font size="8" color="blue">MODIFY USER </font>
	</p>
	<form id="register" name="form" method="POST" class="form-horizontal"
		style="background-color: #99ffff">
		<font size="4" color="blue">First name:</font><br> <input
			type="text" class="form-control txtbox" name="firstname" id="fname1"
			ng-model="modifyCtrl.ftxt"> <br> <font size="4"
			color="blue">Last name:</font><br> <input type="text"
			class="form-control txtbox" name="lastname"
			ng-model="modifyCtrl.ltxt"> <br> <font size="4"
			color="blue">Gender:</font><br> <input type="radio"
			name="gender" value="male" ng-checked="{{modifyCtrl.gtxt = "
			male" ?  "true" : "false"}}" ng-model="modifyCtrl.gtxt"> <font
			size="4" color="#000000">Male</font> <input type="radio"
			name="gender" value="female" ng-checked="{{modifyCtrl.gtxt = "
			female" ?  "true" : "false"}}" ng-model="modifyCtrl.gtxt"> <font
			size="4" color="#000000">Female</font> <br>
		<button name="Submit" id="modifyUser"
			class="btn btn-primary  btnModify"
			ng-click="modifyCtrl.updateUser(modifyCtrl.ftxt,modifyCtrl.ltxt,modifyCtrl.gtxt)">Modify
			User</button>
	</form>
</div>